@model List<SetLight.Abstracciones.ModelosParaUI.OrderDetailDto>

<div class="form-group">
    <input type="text" id="buscarEquipo" class="form-control" placeholder="Buscar por nombre, marca o modelo..." />
</div>

<table class="table table-bordered table-striped" id="tablaEquipos">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Valor Renta</th>
            <th><strong>Stock</strong></th> 
            <th>Cantidad</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>
                    @Html.HiddenFor(m => m[i].EquipmentId)
                    @Html.DisplayFor(m => m[i].EquipmentName)
                </td>
                <td>@Html.DisplayFor(m => m[i].Brand)</td>
                <td>@Html.DisplayFor(m => m[i].Model)</td>
                <td>₡@Model[i].RentalValue.ToString("N2")</td>
                <td><strong>@Model[i].Stock</strong></td> 
                <td>
                    <input type="number" min="0" class="form-control cantidad-equipo"
                           data-index="@i" data-id="@Model[i].EquipmentId"
                           data-name="@Model[i].EquipmentName"
                           data-brand="@Model[i].Brand"
                           data-model="@Model[i].Model"
                           data-value="@Model[i].RentalValue"
                           data-stock="@Model[i].Stock" 
                    value="0" />
                </td>
            </tr>
        }
    </tbody>
</table>


<div class="text-right">
    <button type="button" class="btn btn-primary" id="btnAgregarEquipos">Agregar seleccionados</button>
</div>
