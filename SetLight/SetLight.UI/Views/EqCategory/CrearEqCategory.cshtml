@model SetLight.Abstracciones.ModelosParaUI.EqCategoryDto

@{
    Layout = null; 
}

@using (Ajax.BeginForm("CrearEqCategory", "EqCategory",
    new AjaxOptions
    {
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "modal-content-category",
        OnSuccess = "onCategoryCreated"
    },
    new { @id = "formCrearCategoria" }))
{
    @Html.AntiForgeryToken()

    <div class="modal-header">
        <h4 class="modal-title">Crear Categoría</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>

    <div class="modal-body">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="modal-footer">
        <input type="submit" value="Guardar" class="btn btn-success" />
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
